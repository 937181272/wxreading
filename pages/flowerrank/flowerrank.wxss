.flower_container {
    background: #E0565B;
    padding: 0 8px;
}

.flower-header-bg {
    position: relative;
    display: block;
    width: 375px;
    height: 195px;
}

.flower-list-content {
  position: relative;
    width: 100%;
    background-color: #FFFFFF;
}
/* flower-list-content */
.flower-list-content{
    border-radius: 14px;
}
.fist-line-user{
    position: relative;
    width: 100%;
    height: 142px;
    border-bottom: 2px solid #F6F6F6;
    box-sizing: border-box;
}
.fist-line-user-1{
    position: relative;
    display: flex;
    flex-flow: column nowrap;
    align-items: center;
    top : -20px;
    width: 120px;
    padding: 12px 20px 0 20px;
    background-color: #FFFFFF;
    box-sizing: border-box;
    margin: 0 auto;
    border-radius: 14px 14px 0 0;
    box-shadow: 0 -10px 10px rgba(0,0,0,.1);
}
/*第一名*/
.user-portrait-1{
    position: relative;
    width: 80px;
    height: 80px;
    border-radius: 50%;
    background-color: #1ECFA7;
}
.user-rank-icon{
    position: absolute;
    right: 0;
    bottom: 0;
    width: 30px;
    height: 30px;
}
.user-name-1{
    font-size: 16px;
}
.user-age-1{
    font-size: 12px;
    color: #666666;
}
.user-flowernum-1{
    font-size: 18px;
    color: #FF7500;
}
/* 第二名 */
.fist-line-user-2{
    position: absolute;
    display: flex;
    flex-flow: column nowrap;
    align-items: center;
    top: 0;
    left: 0;
    width: 120px;
    padding: 10px 30px;
    box-sizing: border-box;
}
.user-portrait-2{
    position: relative;
    width: 60px;
    height: 60px;
    border-radius: 50%;
    background-color: #1ECFA7;
}
/* 第三名 */
.fist-line-user-3{
    position: absolute;
    display: flex;
    flex-flow: column nowrap;
    align-items: center;
    top: 0;
    right: 0;
    width: 120px;
    padding: 10px 30px;
    box-sizing: border-box;
}

/*main-rank-list*/
.main-rank-list{
    position: relative;
    padding-bottom: 12px;
}
.rank-item{
    width: 100%;
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    padding: 9px 30px;
    height: 58px;
    box-sizing: border-box;
    border-bottom: 2px solid #F6F6F6;
}
.rank-item-pos{
    font-size: 16px;
}
.rank-item-portrait{
    flex-shrink: 0;
    margin-left: 28px;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: silver;
}
.rank-item-info{
    margin-left: 10px;
    display: flex;
    flex-flow: column nowrap;
}
.rank-item-info-name{
    font-size: 14px;
}
.rank-item-info-age{
    font-size: 10px;
    color: #666666;
}
.rank-item-flowernum{
    position: absolute;
    font-size: 16px;
    color: #FF7500;
    right: 32px;
}
/*fixed-cur-user-info*/
.fixed-my-container{
    position: fixed;
    bottom: 0;
    display: flex;
    width: 100%;
    height: 60px;
    flex-flow: row nowrap;
    align-items: center;
    padding: 8px 20px;
    box-sizing: border-box;
    border-top: 1px solid #C1C1C1;
    background-color: #FFFFFF;
}

.fixed-my-index{
    font-size: 16px;
    color: #1ECFA7;
}
.fixed-my-portrait{
    flex-shrink: 0;
    margin-left: 28px;
    width: 40px;
    height: 40px;
    border: 1px solid #1ECFA7;
    border-radius: 50%;
    background-color: silver;
}
.fixed-my-info{
    margin-left: 10px;
    display: flex;
    flex-flow: column nowrap;
}
.fixed-my-info-pos{
    font-size: 16px;
    color: #1ECFA7;
}
.fixed-my-info-beat{
    font-size: 12px;
    color: #666666;
}
.fixed-my-flowernum{
    position: absolute;
    font-size: 18px;
    color: #1ECFA7;
    right: 32px;
}
